<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.phat.biippo_test1.oilChange_picture">

        <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picture1"
            android:src="@drawable/oil1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.22" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines = "100"
            android:scrollbars = "vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="
1.Drive your 8th generation Civic onto ramps, or use a car-jack to lift your vehicle a few feet off of the ground \n"
            android:id="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_weight="0.84" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/picture2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/oil2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines = "100"
                android:scrollbars = "vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="
2.Open your hood and remove the oil cap\n"
                android:id="@+id/textView2"
                android:layout_below="@+id/picture2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.84" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/picture3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/oil3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines = "100"
                android:scrollbars = "vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="
3.Locate the drain plug underneath your vehicle. It looks like a bolt and should be labeled\n"
                android:id="@+id/textView3"
                android:layout_below="@+id/picture3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.84" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/picture4"
                android:layout_centerHorizontal="true"
                android:src="@drawable/oil4"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines = "100"
                android:scrollbars = "vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="
4.Place a drain-pan underneath the plug, and remove the bolt with a 17mm wrench.\n"
                android:id="@+id/textView4"
                android:layout_below="@+id/picture4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.84" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/picture5"
                android:layout_centerHorizontal="true"
                android:src="@drawable/oil5"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines = "100"
                android:scrollbars = "vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text ="
5. Wait for the oil to finish draining into the pan.\n"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/picture6"
                android:layout_centerHorizontal="true"
                android:src="@drawable/oil6"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines = "100"
                android:scrollbars = "vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="
5.Using the 17mm wrench, tighten the drain-bolt back on\n"
                android:id="@+id/textView5"
                android:layout_below="@+id/picture5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.84" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/picture7"
                android:layout_centerHorizontal="true"
                android:src="@drawable/oil7"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines = "100"
                android:scrollbars = "vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="
6.With 4 quarts of 5W-20 synthetic oil, pour the oil into the hole where you first removed the oil cap\n"
                android:id="@+id/textView6"
                android:layout_below="@+id/picture6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.84" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines = "100"
                android:scrollbars = "vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="
7.Screw the oil cap back on. Your car now has new oil!"
                android:id="@+id/textView7"
                android:layout_below="@+id/picture7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.84" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
